!!!5
%html{:lang=>'ru'}
  %head
    = render :partial => "/layouts/head"
  %body
    .layout
      .container
        .header{:role=>"banner"}
          .row
            .navbar.top-menu
              %ul.nav.pull-right
                %li=link_to("О компании","#")
                %li=link_to("Контакты","#")
                %li=link_to("Личный кабинет","#")
          .row
            .span3
              .logo
                =link_to(image_tag('logo/logo-top.png', :width=>"149", :height=>"96", :alt=>"HoReCa Store"), "/")
                %span.text-center Для отелей и ресторанов
            .span9
              .row-fluid
                .span6
                /
                  .text-center.phone
                    %i.fa.fa-phone-square
                    8(812) 305-6020
                .span6
                  %form.form-search.pull-right
                    .input-append
                      %input.input-xlarge.serch-query{:type=>'text', :placeholder=>"Поиск по каталогу"}
                      %button.btn{:type=>'submit'}
                        %i.fa.fa-search.fa-fw
              .row-fluid
                .span12
                  .navbar.navbar-inverse.main-menu
                    .navbar-inner
                      %ul.nav
                        %li=link_to("Для отелей","#")
                        %li=link_to("Для ресторанов","#")
                        %li=link_to("Товары на складе","#")
                      %ul.nav.pull-right
                        %li.divider-vertical
                        %li
                          %a{:href=>'#'}
                            %i.fa.fa-shopping-cart.fa-fw
                            Заказ товара
        .middle
          .row
            .span3
              .head-contact
                %span телефон в Санкт-Петербурге:
                .phone
                  %i.fa.fa-phone
                  8(812)305-6020
                .email
                  %i.fa.fa-envelope-o
                  = mail_to "alex@horecastore.ru"
            .span9
              .well.well-large.catalog-menu
                .row-fluid
                  .span4
                    %ul.unstyled
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Халаты","#")
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Полотенца","#")
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Постель","#")
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Тапочки","#")
                  .span4
                    %ul.unstyled
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Покрывала","#")
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Наматрасники","#")
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Подушки","#")
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Матрасы","#")
                  .span4
                    %ul.unstyled
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Косметика для номеров","#")
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Скатерти","#")
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Салфетки","#")
                      %li=link_to("#{'<i class="fa fa-check fa-fw"></i>'}Посуда","#")
        .main{:role=>"main"}
          = yield
      .layout-footer
    .footer{:role=>"contentinfo"}
      .container
        .row
          = render :partial => "/layouts/footer"
    = javascript_include_tag "/ext/headjs/head.min"
    = render :partial => "/layouts/headjs"
