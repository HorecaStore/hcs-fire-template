-@view = {:title=>"Контакты", :description=>"Контакты", :keywords=>"Контаткты"}
-@css = "contact"
-@script = "contact"
-@activeContact = "active"
-@breadcrumbs = [{:path=>'contact',:name=>'Контакты'}]

.main{:role=>"main"}
  %h1.hide-text= @view[:title]
  .row-fluid
    .span7
      %h2.unified Форма обратной связи
      %form.contact-form#contact-form{:name=>'contact', :action=>''}
        .row-fluid
          %input.text-input.span12#name{:type=>'text', :name=>'name', :placeholder=>'Ваше имя'}
        .row-fluid
          %input.text-input.span12#e-mail{:type=>'text', :name=>'email', :placeholder=>'E-mail'}
        .row-fluid
          %textarea.span12.text-area#messages{:type=>'text', :name=>'messages', :placeholder=>'Ваше сообщение', :rows=>'7'}
        %button.btn.btn-info Отправить сообщение
    .span4.offset1
      .address
        %h2.unified Наш адрес
        %ul.fa-ul
          %li<
            %i.fa-li.fa.fa-map-marker.fa-fw<
            ='199397, Россия, г. Санкт-Петербург, ул. Кораблестроителей, дом 30, к.3, пом. 70н'
          %li>
            %i.fa-li.fa.fa-phone.fa-fw>
            ='8(812)305-60-20'
          %li>
            %i.fa-li.fa.fa-tablet.fa-fw>
            ='+7(921)420-77-20'
          %li>
            %i.fa-li.fa.fa-envelope-o.fa-fw>
            = mail_to "alex@horecastore.ru"
      .business-hour
        %h2.unified Время работы
        %ul.unstyled
          %li Понедельник-Пятница: c 9.00-18.00
          %li Суббота: c 9.00-14.00
          %li Воскресенье: Выходной
  .line.line-dotted
  .row-fluid
    .span12
      #map
