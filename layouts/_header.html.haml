.row
  .span3
    .logo{:itemscope=>"itemscope", :itemtype=>"http://schema.org/Organization"}
      %meta{:itemprop=>"name", :content=>"HoReCa Store"}/
      %meta{:itemprop=>"telephone", :content=>"8(812) 305 6020"}/
      %span{:itemprop=>"address", :itemscope=>"itemscope", :itemtype=>"http://schema.org/PostalAddress"}
        %meta{:itemprop=>"addressCountry", :content=>"Россия"}/
        %meta{:itemprop=>"addressLocality", :content=>"Санкт-Петербург"}/
      =link_to(image_tag('logo/logo-top.png', :width=>"149", :height=>"96", :alt=>"HoReCa Store", :itemprop=>"logo"), "/", :itemprop=>"url")
  .span9
    .row-fluid
      .span4.head-contact
        -if !@middle
          %span телефон в Санкт-Петербурге:
          .phone
            %i.fa.fa-phone
            8(812)305-6020
      .span8.top-menu
        .navbar
          %ul.nav.pull-right
            %li=link_to("О компании","/about.html")
            %li=link_to("Контакты","/contact.html")
            %li=link_to("Личный кабинет","#")
            %li.divider-vertical
            %li
              %a{:href=>'#'}
                %i.fa.fa-shopping-cart.fa-fw
                Заказ товара
    .row-fluid.main-menu
      .span12
        .navbar.navbar-inverse
          .navbar-inner
            %ul.nav
              %li=link_to("Для отелей","/catalog/category.html")
              %li=link_to("Для ресторанов","/catalog/category.html")
              %li=link_to("Товары на складе","/catalog/category.html")
            %form.navbar-search.pull-right
              %input.search-query.input-medium{:type=>'text', :placeholder=>"Поиск по сайту"}
    -if @breadcrumbs
      = render :partial => "/layouts/breadcrumbs"
