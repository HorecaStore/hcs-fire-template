-@view = {:title=>"Каталог товаров", :description=>"Каталог продукции HoReCa Store", :keywords=>"Каталог"}
-@css = "catalog"
-@script = "catalog"
-@activeCatalog = "active"
-@breadcrumbs = [{:path=>'catalog',:name=>'Каталог'}]

.row-fluid
  .span9.offset3
    %h1.unified.page-title= @view[:title]

.row-fluid
  .span3
    = render :partial => "/layouts/catalog_menu", :locals=>{:nav_header => "Каталог", :count_item => 12, :link_path => "/catalog/category/group.html", :item_name=>"Группа товаров в категории"}
  .span9.catalog-groups
    -6.times do
      .row-fluid.catalog-group-items
        -2.times do
          .span6
            .media-heading.line-dotted= link_to('Группа товаров', '/catalog/category/group.html')
            .media
              = link_to(image_tag(lorem_image("120x140"),:class=>'media-object img-polaroid'),'/catalog/category/group.html', :class=>'pull-left img-hover')
              .media-body
                %ul
                  -6.times do
                    %li=link_to("Наименование товара","/catalog/category/group/item.html")
