-@view = {:title=>"Личный кабинет", :description=>"Личный кабинет", :keywords=>"Личный кабинет"}
-@script = "users"
-@css = "user"
-@breadcrumbs = [{:path=>'users',:name=>@view[:title]}]

.row-fluid
  .span9.offset3
    %h1.unified.page-title= @view[:title]
.row-fluid
  .span3.left-user-profile
    .thumbnails
      = link_to(image_tag(lorem_image("260x180"), :alt=>"Аватар"),'/actions/action.html', :class=>'thumbnail', :title=>"Изменить аватар")
    .h3.profile-header.text-center Иван Сидорович Иванов
    .line.line-dotted
    %ul.nav.fa-ul
      %li= '<i class="fa fa-li fa-map-marker"></i>Санкт-Петербург'
      %li= '<i class="fa fa-li fa-envelope-o"></i>mail@mail.tt'
      %li= '<i class="fa fa-li fa-phone"></i>+7-111-222-33-44'
    .h4.profile-header.line-dotted Компания
    %ul.nav.fa-ul
      %li= '<i class="fa fa-li fa-bank"></i>ООО "Компания"'
    .line.line-dotted
    .row-fluid
      .span6
        .stat-count.text-center
          = link_to("20","#")
          %span Заказов
      .span6
        .stat-count.text-center
          = link_to("5","#")
          %span Отзывов

  .span9
    %ul.nav.nav-tabs#profile-user
      %li.active= link_to('Мои заказы', '#orders', 'data-toogle'=>'tab')
      %li= link_to('Мои отзывы о товаре', '#messages', 'data-toogle'=>'tab')
      %li= link_to('Мой профиль', '#profile', 'data-toogle'=>'tab')
    .tab-content
      .tab-pane.active#orders
        .accordion#ordersCollapse
          .accordion-group
            .accordion-heading
              = link_to('Collapsible Group Item #1', '#orderOne', :class=>"accordion-toggle", "data-toggle"=>"collapse", "data-parent"=>"#ordersCollapse")
            .accordion-body.collapse#orderOne
              .accordion-inner= lorem_paragraph
          .accordion-group
            .accordion-heading
              = link_to('Collapsible Group Item #2', '#orderTwo', :class=>"accordion-toggle", "data-toggle"=>"collapse", "data-parent"=>"#ordersCollapse")
            .accordion-body.collapse#orderTwo
              .accordion-inner= lorem_paragraph
      .tab-pane#messages
      .tab-pane#profile

