-@view = {:title=>"Группа товаров в категории", :description=>"", :keywords=>""}
-@css = "catalog"
-@script = "catalog"
-@activeCatalog = "group"
-@breadcrumbs = {:path => ['catalog','category','group']}

.row-fluid
  .span9.offset3
    %h1.unified.page-title= @view[:title]

.row-fluid
  .span3
    %ul.nav.nav-tabs.nav-stacked.left-menu
      %li.nav-header Категория товаров
      %li.active= link_to("Группа товаров в категории #{'<i class="fa fa-caret-right pull-right fa-fw"></i>'}", '/catalog/category/group.html')
      -8.times do
        %li= link_to("Группа товаров в категории #{'<i class="fa fa-caret-right pull-right fa-fw"></i>'}", '/catalog/category/group.html')
  .span9.catalog-groups
    -3.times do
      .row-fluid.catalog-group-items
        -2.times do
          .span6
            .media-heading.line-dotted= link_to('Наименование товара', '#')
            .media
              = link_to(image_tag(lorem_image("120x140"),:class=>'media-object img-polaroid'),'#', :class=>'pull-left img-hover')
              .media-body.item

