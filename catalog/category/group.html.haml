-@view = {:title=>"Группа товаров в категории", :description=>"", :keywords=>""}
-@css = "catalog"
-@bootstrap_select = true
-@script = "catalog-item"
-@activeCatalog = "group"
-@breadcrumbs = [{:path=>'catalog',:name=>'Каталог'},{:path=>'catalog/category',:name=>'Категория товаров'},{:path=>'catalog/category/group',:name=>'Группа товаров в категории'}]

.row-fluid
  .span9.offset3
    %h1.unified.page-title= @view[:title]

.row-fluid
  .span3
    %ul.nav.nav-tabs.nav-stacked.left-menu
      %li.nav-header Категория товаров
      %li.active= link_to("Группа товаров в категории #{'<i class="fa fa-caret-right pull-right fa-fw"></i>'}", '/catalog/category/group.html')
      -8.times do
        %li= link_to("Группа товаров в категории #{'<i class="fa fa-caret-right pull-right fa-fw"></i>'}", '/catalog/category/group.html')
  .span9.catalog-groups
    -3.times do
      .row-fluid.catalog-group-items
        -2.times do
          .span6
            .media-heading.line-dotted= link_to('Наименование товара', '/catalog/category/group/item.html')
            .media
              = link_to(image_tag(lorem_image("120x140"),:class=>'media-object img-polaroid'),'/catalog/category/group/item.html', :class=>'pull-left img-hover')
              .media-body.item
                %p= lorem_words(20)+'...'
                %p=link_to('Подробнее...', '/catalog/category/group/item.html', :class=>'btn btn-link')



