-@view = {:title=>"Наименование товара", :description=>"", :keywords=>""}
-@css = "catalog"
-@bootstrap_select = true
-@script = "catalog-item"
-@activeCatalog = "item"
-@breadcrumbs = [{:path=>'catalog',:name=>'Каталог'},{:path=>'catalog/category',:name=>'Категория товаров'},{:path=>'catalog/category/group',:name=>'Группа товаров в категории'},{:path=>'catalog/category/group/item',:name=>'Наименование товара'}]

.row-fluid
  .span9.offset3
    %h1.unified.page-title= @view[:title]

.row-fluid
  .span3
    %ul.nav.nav-tabs.nav-stacked.left-menu
      %li.nav-header Группа товаров
      %li.active= link_to("Наименование товара #{'<i class="fa fa-caret-right pull-right fa-fw"></i>'}", '/catalog/category/group/item.html')
      -8.times do
        %li= link_to("Наименование товара #{'<i class="fa fa-caret-right pull-right fa-fw"></i>'}", '/catalog/category/group/item.html')
  .span9.catalog-groups
  /
    -3.times do
      .row-fluid.catalog-group-items
        -2.times do
          .span6
            .media-heading.line-dotted= link_to('Наименование товара', '#')
            .media
              = link_to(image_tag(lorem_image("120x140"),:class=>'media-object img-polaroid'),'#', :class=>'pull-left img-hover')
              .media-body.item
